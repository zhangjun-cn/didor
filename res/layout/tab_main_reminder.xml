<?xml version="1.0" encoding="utf-8"?>
<com.dali.didor.view.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include layout="@layout/tab_reminder_menu" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/tab_reminder_title_bar" />

        <com.dali.didor.view.SlideListView
            android:id="@+id/listview_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:divider="#dddbdb"
            android:dividerHeight="1.0px"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

    </LinearLayout>

</com.dali.didor.view.SlideMenu>